# =============================================================================
# Environment Variables Template
# Copy to .env and fill in your values
# =============================================================================

# Hugging Face
HF_TOKEN=your_huggingface_token_here
HF_HOME=/path/to/hf/cache

# Weights & Biases
WANDB_API_KEY=your_wandb_api_key_here
WANDB_PROJECT=llm-finetuning
WANDB_ENTITY=your_wandb_entity

# MLflow (optional)
MLFLOW_TRACKING_URI=http://localhost:5000

# CUDA (GPU only)
CUDA_VISIBLE_DEVICES=0,1,2,3

# Transformers
TRANSFORMERS_CACHE=~/.cache/huggingface/transformers
TOKENIZERS_PARALLELISM=false

# DeepSpeed (optional)
DS_SKIP_CUDA_CHECK=1

# Cloud GPU: AWS (optional)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret
AWS_DEFAULT_REGION=us-east-1
AWS_INSTANCE_TYPE=g5.2xlarge
AWS_EC2_KEY_NAME=llm-finetuning-key
AWS_EC2_SECURITY_GROUP=sg-xxxxxxxx
AWS_EC2_SUBNET_ID=subnet-xxxxxxxx

# Cloud GPU: Lambda Labs (optional)
LAMBDA_API_KEY=your_lambda_api_key
LAMBDA_USERNAME=your_lambda_username
LAMBDA_REGION=us-east-1
LAMBDA_INSTANCE_TYPE=gpu_1x_a10
LAMBDA_SSH_KEY_PATH=~/.ssh/lambda-key.pem
